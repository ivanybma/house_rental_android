<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/house_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/houserent"
        app:layout_heightPercent="31%"/>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/house_image"
        android:background="@color/white"
        android:stretchColumns="3"
        android:showDividers="middle"
        app:layout_heightPercent="10%">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/edit_icon"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%"
                    android:src="@drawable/ic_create_black_24dp"/>

                <RelativeLayout
                    android:layout_below="@id/edit_icon"
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%">

                    <TextView
                        android:id="@+id/edit_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Edit Post"/>

                </RelativeLayout>

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/comment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/comment_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_below="@id/comment_layout"
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%">

                    <TextView
                        android:id="@+id/comment_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Reviews"/>

                </RelativeLayout>

            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/status_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/status_icon"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%"
                    android:src="@drawable/ic_add_alert_black_24dp"/>

                <RelativeLayout
                    android:layout_below="@id/status_icon"
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%">

                    <TextView
                        android:id="@+id/status_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Status Change"/>

                </RelativeLayout>

            </android.support.percent.PercentRelativeLayout>

        </TableRow>

    </android.support.percent.PercentRelativeLayout>

    <View
        android:layout_below="@id/table_layout"
        android:id="@+id/gap1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="2%" />

    <android.support.percent.PercentFrameLayout
        android:id="@+id/google_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="30%"
        android:layout_below="@+id/gap1">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/google_map_layout">

            <FrameLayout
                android:id="@+id/google_map_frame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="80%"
                android:text="Google Map Area">

                <!--<com.google.android.gms.maps.MapView-->
                    <!--android:id="@+id/google_map"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--map:liteMode="true"-->
                    <!--/>-->
                <include layout="@layout/mapview_googlemap"
                    android:id="@+id/google_map"/>

            </FrameLayout>

            <RelativeLayout
                android:layout_below="@+id/google_map_frame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="20%"
                android:background="@color/white">

                <TextView
                    android:id="@+id/google_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentFrameLayout>

    <View
        android:layout_below="@+id/google_frame"
        android:id="@+id/gap2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_heightPercent="2%"/>

    <LinearLayout
        android:id="@+id/options"
        android:layout_below="@+id/gap2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_heightPercent="25%">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="description"
                android:layout_weight="1"
                android:layout_gravity="center"/>

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="telephone"
                android:layout_weight="1"
                android:layout_gravity="center"/>

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="email"
                android:layout_weight="1"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>


</android.support.percent.PercentRelativeLayout>