<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/favorite_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:id="@+id/favorite_info1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favorite Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/favorite_picture" />

    <TextView
        android:id="@+id/favorite_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite Address"
        android:layout_alignBottom="@+id/favorite_picture"
        android:layout_below="@+id/favorite_info1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/favorite_picture" />

